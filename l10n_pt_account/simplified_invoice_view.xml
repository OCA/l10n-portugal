<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="simplified_invoice_form" model="ir.ui.view">
            <field name="name">simplified_invoice.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_pt_form"/>
            <field name="arch" type="xml">
                <field name="number" position="before">
                    <label string="Draft Simplified Invoice " attrs="{'invisible': ['|',('state','not in',('draft',)), ('type','&lt;&gt;','simplified_invoice')]}"/>
                </field>
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field string="Customer" name="partner_id"
                                groups="base.group_user" context="{'search_default_customer':1, 'show_address': 1}"
                                options='{"always_reload": True}' attrs="{'readonly': ['|',('state','!=','draft'),('type','=','simplified_invoice')]}" domain="[('customer', '=', True)]"/>
                </xpath>
                <field name="payment_term_id" position="replace">
                    <field name="payment_term_id" class="oe_inline" attrs="{'readonly': [('type','=','simplified_invoice')]}"/>
                </field>
            </field>
        </record>
        
         <!-- Simplified invoices -->
         <record id="action_simplified_invoice_tree" model="ir.actions.act_window">
            <field name="name">Simplified Invoice</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,graph</field>
            <field eval="False" name="view_id"/>
            <field name="domain">[('type','=','simplified_invoice')]</field>
            <field name="context">{'type':'simplified_invoice', 'journal_type': 'sale', 'search_default_hide_cancelled': 1}</field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a customer simplified invoice.
              </p><p>
                OpenERP's electronic invoicing allows to ease and fasten the
                collection of customer payments. You can easily create a invoice without 
                vat and customer requirement.
              </p><p>
                OpenERP can also generate draft simplified invoices automatically from
                OUT's or waybills. 
              </p>
            </field>
        </record>

        <record id="action_simplified_invoice_tree_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="account.invoice_tree"/>
            <field name="act_window_id" ref="action_simplified_invoice_tree"/>
        </record>

        <record id="action_simplified_invoice_view2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account.invoice_form"/>
            <field name="act_window_id" ref="action_simplified_invoice_tree"/>
        </record>
        
        
        <menuitem action="account.action_invoice_tree1" id="account.menu_action_invoice_tree1" parent="account.menu_finance_receivables" sequence="1"/>
        <menuitem action="account.action_invoice_tree3" id="account.menu_action_invoice_tree3" parent="account.menu_finance_receivables" sequence="8"/>
        
        <menuitem action="action_simplified_invoice_tree" 
                  id="menu_action_simplified_invoice" 
                  parent="account.menu_finance_receivables"
                  sequence="4"/>
                
    </data>
</openerp>