<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        
        <!-- Guia sequence -->
        <record id="guia_remessa_sequence" model="ir.sequence">
            <field name="name">Guia Remessa Sequence</field>
            <field name="code">account.guia.remessa.sequence</field>
            <field name="prefix">%(year)s/</field> 
			<field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
        </record>
        
        <record id="guia_transporte_sequence" model="ir.sequence">
            <field name="name">Guia Transporte Sequence</field>
            <field name="code">account.guia.transporte.sequence</field>
            <field name="prefix">%(year)s/</field> 
			<field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
        </record>
        
        <record id="guia_devolucao_sequence" model="ir.sequence">
            <field name="name">Guia Devolucao Sequence</field>
            <field name="code">account.guia.devolucao.sequence</field>
            <field name="prefix">%(year)s/</field> 
			<field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
        </record>
        
        <!--
        Account Journal Sequences
        -->
        
        <record id="sequence_debit_note_journal" model="ir.sequence">
            <field name="name">Debit Note Journal</field>
            <field eval="3" name="padding"/>
            <field name="prefix">DN/%(year)s/</field>
        </record>
        
        <!-- Account Journals -->
        <record id="debit_note_journal" model="account.journal">
            <field name="name">Debit Notes</field>
            <field name="code">DEB</field>
            <field name="type">general</field>
        </record>

        <!-- 
        Payment Term : Pronto Pagamento for simplified invoices
         -->
         <record id="payment_term" model="account.payment.term" forcecreate="True">
            <field name="name">Pronto Pagamento</field>
        </record>
        
         <!-- Account-related subtypes for messaging / Chatter -->
        <record id="mt_invoice_canceled" model="mail.message.subtype">
            <field name="name">Canceled</field>
            <field name="res_model">account.invoice</field>
            <field name="default" eval="False"/>
            <field name="description">Invoice canceled</field>
        </record>
        
        <!-- Account-related subtypes for messaging / Chatter -->
        <record id="mt_waybill_canceled" model="mail.message.subtype">
            <field name="name">Canceled</field>
            <field name="res_model">account.guia</field>
            <field name="default" eval="False"/>
            <field name="description">Guia Cancelada</field>
        </record>
       
        <record id="mt_waybill_validated" model="mail.message.subtype">
            <field name="name">Validated</field>
            <field name="res_model">account.guia</field>
            <field name="default" eval="False"/>
            <field name="description">Guia Arquivada</field>
        </record>
        
    </data>
</openerp>
