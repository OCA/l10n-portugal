<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="tko_view_account_invoice_report_search" model="ir.ui.view">
            <field name="name">account.invoice.report.search</field>
            <field name="model">account.invoice.report</field>
            <field name="inherit_id" ref="account.view_account_invoice_report_search" />
            <field name="arch" type="xml">
            	<xpath expr="//filter[@name='customer']" position="attributes">
            		<attribute name="domain">[('type', 'in', ('out_invoice','out_refund','debit_note','simplified_invoice'))]</attribute>
            	</xpath>
            	<xpath expr="//filter[@name='supplier']" position="attributes">
            		<attribute name="domain">[('type', 'in', ('in_invoice','in_refund','in_debit_note'))]</attribute>
            	</xpath> 
            </field>
        </record>
    </data>
</openerp>
