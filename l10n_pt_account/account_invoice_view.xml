            </field>
            <field name="number" position="before">
                <label string="Fund " attrs="{'invisible': ['|',('state','in',('draft','proforma','proforma2')), ('type','&lt;&gt;','in_debit_note')]}"/>
            </field>
           <field name="fiscal_position_id" position="replace">
