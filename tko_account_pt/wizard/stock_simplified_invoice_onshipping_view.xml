<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    <record id="view_stock_simplified_invoice_onshipping" model="ir.ui.view">
            <field name="name">Simplified Invoice Onshipping</field>
            <field name="model">stock.simplified.invoice.onshipping</field>
            <field name="arch" type="xml">
                <form string="Create Simplified Invoice" version="7.0">
                    <group>
                        <field name="journal_id"/>
                        <field name="group"/>
                        <field name="invoice_date" />
                    </group>
                    <footer>
                        <button name="open_simplified" string="Create" type="object" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_stock_simplified_invoice_onshipping" model="ir.actions.act_window">
            <field name="name">Create Simplified Invoice</field>
            <field name="res_model">stock.simplified.invoice.onshipping</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <act_window name="Create Simplified Invoice"
            res_model="stock.simplified.invoice.onshipping"
            src_model="stock.picking"
            key2="client_action_multi"
            multi="True"
            view_mode="form"
            view_type="form"
            target="new"
            id="action_stock_simplified_invoice_id"/>
            
    </data>
</openerp>
